<div class="container">
  <h1 class="text-center mt-4"><%= @article.title%></h1>

    <div class="row">
      <div class="col-xl mt-4">
        <div class="card text-center shadow mb-5 bg-white rounded">
          <div class="card-header font-italic">
            by <%= @article.user.username.capitalize %>
          </div>
          <div class="card-body">
            <div class="card-text text-left pl-5"><%= simple_format(@article.description)%></div>
            <%= link_to 'Edit', edit_article_path(@article), class: "btn btn-outline-info custom"%>
            <%= link_to 'Delete', article_path(@article), class: "btn btn-outline-danger custom", method: :delete, data: {confirm: 'Are u sure?'}%>
          </div>
          <div class="card-footer text-muted">
            <small>Created <%= time_ago_in_words(@article.created_at)%> ago,
            edited <%= time_ago_in_words(@article.updated_at)%> ago</small>
          </div>
        </div>
      </div>
    </div>

</div>


